{
  "devDependencies": {
    "@types/node": "^22.7.5",
    "concurrently": "^9.1.2",
    "cpx": "^1.5.0",
    "gts": "^6.0.2",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "copy-static": "cpx \"./src/**/*.{html,glsl}\" ./build --watch",
    "dev": "concurrently \"npx tsc -w\" \"npm run copy-static\"",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm.cmd run compile",
    "pretest": "npm.cmd run compile",
    "posttest": "npm.cmd run lint"
  }
}
